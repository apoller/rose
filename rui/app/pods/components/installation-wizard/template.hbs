<div class="ui two column centered grid">
  <div class="column">
    <div class="ui segment form">
      <h2 class="ui dividing header">
        <i class="download icon"></i>
        <div class="content">
          {{t "wizard.header"}}
          <div class="sub header">{{t "wizard.description"}}</div>
        </div>
      </h2>

      <div class="ui two cards">
        <div class="card">
          <div class="content">
            <div class="header">{{t "wizard.defaultConfigHeader"}}</div>
            <div class="description">
              {{t "wizard.defaultConfigDescription"}}
            </div>
          </div>
          <button class="ui primary bottom attached button"
                  {{action "selectDefaultConfig"}}>
            {{t "wizard.defaultBtn"}}
          </button>
        </div>
        <div class="card">
          <div class="content">
            <div class="header">{{t "wizard.fileConfigHeader"}}</div>
            <div class="description">
              {{t "wizard.fileConfigDescription"}}
            </div>
          </div>
          {{#file-picker  fileLoaded="fileLoaded"
                          dropzone=false
                          preview=false
                          readAs="readAsText"
                          class="ui bottom attached primary button"}}
            <i class="add icon"></i>
            {{t "wizard.fileConfigBtn"}}
          {{/file-picker}}
        </div>
      </div>
    </div>
  </div>
</div>
